<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_title">

    <Space
        android:id="@+id/title_top_space"
        android:layout_width="match_parent"
        android:layout_height="190dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_sensor_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connStatus"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_sensor_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_server_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_server_label"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/title_server_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_profile_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_profile_label"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/title_profile_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_profile_value"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:id="@+id/title_middle_space"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <Button
        android:id="@+id/btnStartConnect"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/title_connect_btn_selector"
        android:text="@string/connect"
        android:textSize="20sp" />

</LinearLayout>
